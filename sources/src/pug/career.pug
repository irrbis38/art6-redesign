                    {
                        icon: 'career_icon1.svg',
                        text: 'Непрерывно обучайся и расти от Junior до Middle, от Middle до Senior'
                    },
                    {
                        icon: 'career_icon2.svg',
                        text: 'Выполняй задания, оттачивай навыки, предлагай новые решения'
                    },
                    {
                        icon: 'career_icon3.svg',
                        text: 'Инвестируй время навыки, которые востребованы на рынке'
                    },
                    {
                        icon: 'career_icon4.svg',
                        text: 'Работай в надежной компании, основанной в 2013 году'
                    }
                ]

            ul.scr_karyera_preimushestva_art6__list

                each item in preimushestva_list
                    li.scr_karyera_preimushestva_art6__item
                        img(src= "./images/scr_karyera_preimushestva_art6/" + item.icon, alt="" width="32" height="32" loading="lazy" decoding="async")
                        p= item.text

            .scr_karyera_preimushestva_art6__career

