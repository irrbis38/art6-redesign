.scr_otzyvy_full
    .scr_otzyvy_full__overlay

    .scr_otzyvy_full__slider.swiper
        .scr_otzyvy_full__wrapper.swiper-wrapper
            - var counter = 0;
            while counter < 16

                -
                    var isActive = counter === 0 ? true : false
                    
                    var imgSrcset = `./images/scr_otzyvy/review_full_${counter + 1}.webp, ./images/scr_otzyvy/review_full_${counter + 1}@2x.webp 2x`

                    var imgSrc = `scr_otzyvy/review_full_${counter + 1}@2x`

                .scr_otzyvy_full__slide.swiper-slide
                    +imgWithClass(isActive, imgSrcset, imgSrc, 'отзыв', 540, 760, true)
                    .swiper-lazy-preloader.swiper-lazy-preloader-white

                - counter++


        .scr_otzyvy_full__nav 
            button.scr_otzyvy_full__prev(aria-label="Показать предыдущий слайд")
            button.scr_otzyvy_full__next(aria-label="Показать следующий слайд")

        button.scr_otzyvy_full__close(aria-label="Закрыть модальное окно")
